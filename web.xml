<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- add servlet -->
    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>org.example.app.servlets._AddUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>authorization</servlet-name>
        <servlet-class>org.example.app.servlets.AuthorizationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>authorization</servlet-name>
        <url-pattern>/authorization</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>authorization</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>account_menu</servlet-name>
        <servlet-class>org.example.app.servlets.AccountMenuServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>account_menu</servlet-name>
        <url-pattern>/accounts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>restore-accs</servlet-name>
        <servlet-class>org.example.app.servlets.AccountMenuServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>restore-accs</servlet-name>
        <url-pattern>/raccounts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>admin_stock</servlet-name>
        <servlet-class>org.example.app.servlets.StockServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>admin_stock</servlet-name>
        <url-pattern>/stock</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>user_stock</servlet-name>
        <servlet-class>org.example.app.servlets.StockServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>user_stock</servlet-name>
        <url-pattern>/ustock</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>change</servlet-name>
        <servlet-class>org.example.app.servlets.ChangeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>change</servlet-name>
        <url-pattern>/change</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>add-choco</servlet-name>
        <url-pattern>/choco</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>add-choco</servlet-name>
        <servlet-class>org.example.app.servlets.AddChocoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cart</servlet-name>
        <servlet-class>org.example.app.servlets.CartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>history</servlet-name>
        <url-pattern>/hcart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>history</servlet-name>
        <servlet-class>org.example.app.servlets.CartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jpg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.png</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jpeg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.webp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.gif</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>